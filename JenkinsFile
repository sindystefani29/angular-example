pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                echo "No  Build for node js"
            }
        }
           
        stage('dockerized app') {
            steps{
                echo "Build Docker images"
                bat "docker build -t angular ."
                
            }
    
        }

        stage('Deploy To Docker Registry') {
            steps {
                echo "Docker Image Tag"
                bat "docker tag angular registry.heroku.com/frozen-brook-44582/web"
                bat "docker push registry.heroku.com/frozen-brook-4458/web"
            }
        }    
    }
}